@{
  Layout = "_Layout";
}

@using HairSalon.Models;

@if (@Model.Count == 0)
{
  <h2>No Stylists Saved!!!!1!1!1!!!1</h2> 
}

<ul>
@foreach(Stylist item in Model)
{
  <li>@Html.ActionLink($"{item.StylistName}", "Details", "Cuisines", new { id = item.StylistId})</li>
}
</ul>

<p>@Html.ActionLink("Add A New Stylist", "Create")</p>
